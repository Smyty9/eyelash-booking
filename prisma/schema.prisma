generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  CLIENT
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELED
}

enum TimeBlockType {
  DAY_OFF
  VACATION
  BREAK
}

model User {
  id        String   @id @default(uuid())
  phone     String   @unique
  name      String?
  email     String?
  password  String?
  role      UserRole @default(CLIENT)
  createdAt DateTime @default(now())
  
  appointments Appointment[]
  
  @@map("users")
}

model Service {
  id            String   @id @default(uuid())
  name          String
  description   String?
  price         Float
  durationMinutes Int
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  appointments Appointment[]
  
  @@map("services")
}

model Appointment {
  id         String            @id @default(uuid())
  date       DateTime
  status     AppointmentStatus @default(PENDING)
  userId     String
  serviceId  String
  clientName String?
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt
  
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  service Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  
  @@index([date])
  @@index([userId])
  @@index([serviceId])
  @@map("appointments")
}

model Settings {
  id                    String   @id @default(uuid())
  workStartHour         Int      @default(10)
  workEndHour           Int      @default(18)
  timeSlotIntervalMinutes Int    @default(30)
  updatedAt             DateTime @default(now()) @updatedAt
  
  @@map("settings")
}

model TimeBlock {
  id            String         @id @default(uuid())
  type          TimeBlockType
  startDateTime DateTime
  endDateTime   DateTime
  description   String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  
  @@index([startDateTime, endDateTime])
  @@index([type])
  @@map("time_blocks")
}

